@model Product

<form method="post" asp-action="Edit" enctype="multipart/form-data">

    <div class="row pb-2" style="flex-wrap: wrap;">
        <div class="col-lg-9 col-md-12">
            <h2>Product</h2>

            <div class="form-group row">

                <div class="form-group row">
                <label for="Name" class="col-sm-4 col-form-label">Name</label>
                    <div class="col-sm-8"> 
                        <input type="text" readonly class="form-control-plaintext" id="Name" value="@Model.Name"/>
                    </div> 
                </div>
                
                <div class="form-group row">
                <label for="Price" class="col-sm-4 col-form-label">Price</label>
                    <div class="col-sm-8">
                        <input type="text" readonly="" class="form-control-plaintext" id="Price" value="€@Model.Price" />
                    </div>
                </div>

                @foreach (var supplier in Model.Suppliers)
                {
                    <div class="form-group row">
                    <label for="SupplierName" class="col-sm-4 col-form-label">Supplier</label>
                        <div class="col-sm-8">
                            <input type="text" readonly="" class="form-control-plaintext" id="@supplier.Name" value="@supplier.Name" />
                        </div>
                    </div>
                }

                <div class="form-group row">
                <label for="WarehouseName" class="col-sm-4 col-form-label">Warehouse</label>
                    <div class="col-sm-8">
                        <input type="text" readonly="" class="form-control-plaintext" id="WarehouseName" value="@Model.Warehouse.Name" />
                    </div>
                </div>

            </div>
        </div>

        <div class="col-3">
            <img src="@Model.Image" width:"100%" height:"auto" style="border-radius: 5px; border: 1px solid #bbb9b9"/>
        </div>

    </div>

        <div class="mb-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="width:150px"> Back to List</a>
        </div>

</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
