@model Product

<form method="post" asp-action="Create" enctype="multipart/form-data">

    <h2>Create Product</h2>
    <br />

    <div asp-validation-summary="All"></div>
    <div class="mb-3">

        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity">Quantity</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Image"> Image File</label>
        <input type="file" name="file" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Suppliers">Suppliers</label>
        <select id="Suppliers" name="SupplierIds" multiple class="form-select">
            @foreach (var supplier in ViewBag.SupplierList)
            {
                <option value="@supplier.Value">@supplier.Text</option>
            }
        </select>
    </div>


    <div class="mb-3">

        <label asp-for="WarehouseId">Warehouse Name</label>
        <select asp-for="WarehouseId" asp-items="@ViewBag.WarehouseList" class="form-select">
            <option disabled selected> --Select Warehouse --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary" style="width:150px"> Create</button>

    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back to List</a>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
