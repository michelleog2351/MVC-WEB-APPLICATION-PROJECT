@model Warehouse

<form method="post">

    <h2>Create new warehouse</h2>
    <br />

    <div asp-validation-summary="All"></div>

    <div class="mb-3">
        <div class="mb-3">
            <label asp-for="Name">Warehouse Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ContactNo">Contact No.</label>
            <input asp-for="ContactNo" class="form-control" placeholder="087 031 6373" />
            <span asp-validation-for="ContactNo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Location">Location</label>
            <input asp-for="Location" class="form-control" placeholder="E.g. France" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary" style="width:150px"> Create</button>

    <a asp-controller="Warehouse" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back to List</a>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
